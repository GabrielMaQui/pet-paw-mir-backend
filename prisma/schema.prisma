generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(cuid()) // Primary key
  name              String
  lastName          String
  country           String?
  avatar            String? // URL de la foto de perfil
  address           String?
  phoneNumber       String?
  birthDate         DateTime
  account           String            @unique
  email             String?           @unique
  password          String
  role              UserRole          @default(USER)
  preferredLanguage PreferredLanguage @default(ES)
  darkMode          Boolean           @default(false)
  isActive          Boolean           @default(false)
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt

  posts Post[]
}

model Post {
  id              String    @id @default(cuid()) // Primary key
  name            String
  pet_type        PetType
  pet_gender      PetGender
  pet_description String
  pet_size        PetSize
  pet_age         PetAge
  date_lost       DateTime
  reward          String?
  picture         String
  pet_state       PetState
  tags            String[]

  user    User   @relation(fields: [user_id], references: [id])
  user_id String
}

enum UserRole {
  USER
  ADMINISTRATOR
}

enum PreferredLanguage {
  ES
  EN
}

enum PetType {
  DOG
  CAT
  BIRD
  RABBIT
  OTHER
}

enum PetGender {
  MALE
  FEMALE
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetAge {
  PUPPY
  YOUNG
  ADULT
  SENIOR
}

enum PetState {
  LOST
  FOUND
  ADOPTION
  ADOPTED
}
