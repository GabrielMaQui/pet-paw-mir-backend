generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(cuid())
  name              String
  lastName          String
  country           String?
  avatar            String?
  address           String?
  phoneNumber       String?
  birthDate         DateTime
  account           String            @unique
  email             String            @unique
  password          String
  role              UserRole          @default(USER)
  preferredLanguage PreferredLanguage @default(ES)
  darkMode          Boolean           @default(false)
  isActive          Boolean           @default(false)
  created_at        DateTime          @default(now())
  updated_at        DateTime          @updatedAt
  tokenExpiresAt    DateTime?
  verificationToken String?
  posts             Post[]
}

model Post {
  id              String    @id @default(cuid())
  name            String
  pet_type        PetType
  pet_gender      PetGender
  pet_description String
  pet_size        PetSize
  pet_age         PetAge
  date_lost       DateTime
  reward          String?
  picture         String
  pet_state       PetState
  tags            String[]
  latitude        Decimal   @db.Decimal(9, 6)
  longitude       Decimal   @db.Decimal(9, 6)
  user_id         String
  user            User      @relation(fields: [user_id], references: [id])

  @@unique([name, id])
  @@unique([date_lost, user_id])
}

enum UserRole {
  USER
  ADMINISTRATOR
}

enum PreferredLanguage {
  ES
  EN
}

enum PetType {
  DOG
  CAT
  BIRD
  RABBIT
  OTHER
}

enum PetGender {
  MALE
  FEMALE
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum PetAge {
  PUPPY
  YOUNG
  ADULT
  SENIOR
}

enum PetState {
  LOST
  FOUND
  ADOPTION
  ADOPTED
}
